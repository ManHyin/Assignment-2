{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ManHyin/Assignment-2/main/cleaned%20CPI.csv"
  },
  "width": 800,
  "height": 500,
  "background":"lightgoldenrodyellow",
  "layer": [
    {
      "selection": {
        "month_highlight": {
          "type": "multi",
          "fields": ["Month"],
          "bind": "legend"
        }
      },
      "mark": "rect",
      "encoding": {
        "x": {
          "bin": {"maxbins": 60},
          "field": "Day",
          "type": "quantitative",
          "title": "Day"
        },
        "y": {
          "bin": {"maxbins": 40},
          "field": "CPI (%)",
          "type": "quantitative",
          "title": "CPI (%)"
        },
        "color": {
          "field": "Month",
          "scale": {"range": [
          "#984ea3",
          "#ff7f00",
          "#609DBE"]}
        },
        "opacity": {
          "condition": {"selection": "month_highlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Day", "type": "quantitative"},
          {"field": "Month", "type": "ordinal"},
          {"field": "CPI (%)", "type": "quantitative", "title": "CPI (%)"}
        ]
      }
    }
  ]
}