{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Inflation Rate of countries in year 2021",
  "width": 700,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ManHyin/3179/main/ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ManHyin/3179/main/Inflation%202021.csv"
        },
        "key": "Country",
        "fields": [
          "Inflation"
        ]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Inflation",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              0,
              2,
              4,
              6,
              8,
              10
            ],
            "range": [
              "#00AB90",
              "#0099A7",
              "#006BA1",
              "#003C9A",
              "#000F93",
              "#00008A",
              "#09007F"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Inflation",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "middle",
        "dx": -100,
        "dy": 40,
        "fontsize": 12,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "properties.NAME", "type": "nominal"},
        "color": {"value": "white"},
        "opacity": {
          "condition": {"test": "datum['properties.NAME'] == 'Brazil'", "value": 1},
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "middle",
        "dx": -170,
        "dy": -120,
        "fontsize": 12,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "properties.NAME", "type": "nominal"},
        "color": {"value": "white"},
        "opacity": {
          "condition": {"test": "datum['properties.NAME'] == 'Canada'", "value": 1},
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "middle",
        "dx": 185,
        "dy": -70,
        "fontsize": 12,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "properties.NAME", "type": "nominal"},
        "color": {"value": "white"},
        "opacity": {
          "condition": {"test": "datum['properties.NAME'] == 'China'", "value": 1},
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "middle",
        "dx": 250,
        "dy": 85,
        "fontsize": 12,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "properties.NAME", "type": "nominal"},
        "color": {"value": "white"},
        "opacity": {
          "condition": {"test": "datum['properties.NAME'] == 'Australia'", "value": 1},
          "value": 0
        }
      }
    }



  ]
}