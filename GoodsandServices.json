{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/ManHyin/Homework/main/goods_services_final.csv"
    },
    "width": 700,
    "height": 400,
    "background":"lightgoldenrodyellow",
    "layer": [
      {
        "selection": {
          "category_highlight": {
            "type": "multi",
            "fields": ["Category"],
            "bind": "legend"
          }
        },
        "mark": "bar",
        "encoding": {
          "y": {
            "field": "CPI Annual Movement",
            "type": "quantitative",
            "title": "CPI Annual Movement"
          },
          "x": {"field": "Year", "type": "ordinal"},
          "color": {
            "field": "Category",
            "scale": {"range": ["#ca8861", "#4C1F7B"]}
          },
          "opacity": {
            "condition": {"selection": "category_highlight", "value": 1},
            "value": 0.2
          },
          "tooltip": [
            {"field": "Year", "type": "ordinal"},
            {"field":"Category", "type":"nominal"},
            {
              "field": "CPI Annual Movement",
              "type": "quantitative",
              "title": "CPI Annual Movement"
            }     
          ]
        }
      }
    ]
  }